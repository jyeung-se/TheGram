<center>
  <%= link_to "All users", users_path %> <%= link_to "Create New User", new_user_path %>

  <% @posts = @posts.reverse%>
   <% @posts.each do |post| %>
      <h2> <%= image_tag @users.find(post.user_id).avatar.url(:real_small), class:"avater"  %> <%= link_to @users.find(post.user_id).username, user_path(post.user_id) %></h2>
      <%= image_tag post.picture.url(:medium)%><br>
      <%= @users.find(post.user_id).username %>: <%= post.caption %><br><br>
      <% if post.likes.any? %>
        Likes: <%= post.likes.first.like_count %>
      <% end %>



      <% counter = 0 %>
      <% current_user.likes.each do |user_like| %>
        <% if user_like.post_id == post.id %>
          MADE IT <br>
        <% else %>
          <% while counter == 0 %>
            DIND'T MAKE IT
            <% counter += 1 %>
          <%end %>
      <% end %>
    <% end %>


  <% end %>
</center>
