<center><%= form_for @post, html: { multipart: true } do |f| %>

  <%= f.label :caption %>
  <%= f.text_area :caption %><br><br>

  <%= f.label :picture %>
  <%= f.file_field :picture %><br><br>

  <%= f.label "User: " %>
  <%= f.collection_select :user_id, User.all, :id, :username %><br><br>

  <%= f.submit %>

<% end %>

<%= link_to "All users", users_path %>
<%= link_to "All posts", posts_path %>



</center>
