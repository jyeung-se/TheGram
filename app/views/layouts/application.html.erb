<!DOCTYPE html>
<html>
  <head>
    <title>TheGram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= link_to "Logout", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>

    <% if logged_in? %>
      <%= link_to "My Profile", user_path(session[:logged_in_user_id])%>
    <% end %>
    <center><h1><%= link_to "TheGram", posts_path %></h1></center>
    <%= yield %>
  </body>
</html>
