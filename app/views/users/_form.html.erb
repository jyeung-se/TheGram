<center>

<%= form_for @user, html: { multipart: true } do |f| %>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.label "Profile Photo" %>
  <%= f.file_field :avatar %><br><br>

  <%= f.submit %>
<% end %>
</center>
