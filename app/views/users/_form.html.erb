<center>
<%= form_for @user, html: { multipart: true } do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.label "Profile Photo" %>
  <%= f.file_field :avatar %><br><br>

  <%= f.submit %>
<% end %>
</center>
