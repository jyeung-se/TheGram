<center><h1>New User!</h1></center>

<center>
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :password %>
  <%= f.text_field :password, placeholder: 'Context', style: "#{'display:none'}"%><br>

  <%= f.submit %>
<% end %>
</center>
