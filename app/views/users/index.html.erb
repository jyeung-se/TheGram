<center><h1>Browse and Search for Users</h1></center>
<center><%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search People" %>
    <%= submit_tag "Search" %>
<% end %>

<br><br>
<h3><u>Users</u></h3>
<% @users.each do |everyone| %>
  <%= image_tag everyone.avatar.url(:real_small), class:"avater"  %> <%= link_to everyone.username, everyone  %><br><br>
<% end %>
</center>
